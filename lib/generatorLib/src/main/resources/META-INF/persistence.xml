        <properties>
            <property name="hibernate.dialect" value="com.github.gekoh.yagen.hibernate.OracleXE11gDialect"/>
            <property name="hibernate.connection.driver_class" value="java.sql.Driver"/>
        </properties>

    </persistence-unit>

